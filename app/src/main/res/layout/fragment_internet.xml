<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#03A9F4"
    tools:context=".fragments.InternetFragment">

    <Button

        android:id="@+id/kunlik"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Kunlik"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.08"
        android:textColor="#2196F3"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHorizontal_bias="0.056"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button

        android:id="@+id/haftalik"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Haftalik"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/kunlik"
        app:layout_constraintVertical_bias="0.08"
        android:textColor="#2196F3"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.22"
        android:layout_width="0dp"
        android:layout_height="0dp"/>




    <Button

        android:id="@+id/oylik"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Oylik"
        android:textAllCaps="false"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/haftalik"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.22"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <Button

        android:id="@+id/Hammasi"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Barcha"
        android:textAllCaps="false"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/oylik"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.22"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView

        android:id="@+id/arrow"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.025"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.025"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/arrow"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="Internet paketlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button

        android:id="@+id/trafikni_tekshirish"
        app:layout_constraintTop_toBottomOf="@id/haftalik"
        android:textAllCaps="false"
        android:text="Trafikni tekshirish"
        android:backgroundTint="#FFC107"
        android:textColor="#322428"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintVertical_bias="1"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_excample3"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>